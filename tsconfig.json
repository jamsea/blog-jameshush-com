{
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/typings/global.d.ts"],
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false
  }
}
